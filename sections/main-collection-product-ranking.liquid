<style>
  .rank-badge {
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    left: 1rem;  
  }
  
  .rank-badge.square {
    width: 45px;
    height: 45px;
    color: #fff;
    padding-top: 1px;
    font-size: 22px;
    font-weight: 600;
    text-align: center;
    background-color: #000;
  }

  .rank-badge.triangle {
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 50px 50px 0 0;
    border-color: #dcdcdc transparent transparent transparent;
  }
  
  .rank-badge.triangle span {
    position: absolute;
    top: -55px;
    left: 10px;
    color: #fff;
    padding-top: 1px;
    font-size: 22px;
    font-weight: 600;
  }
  
  @media screen and (min-width: 750px) {
    .product-grid li:nth-child(n+4) {
      width: 25%;
    }
  }
  

  
  @media screen and (max-width: 749px) {
    .rank-badge {
      top: 0rem;
      left: 0.5rem;
    }
    
    .product-grid li:nth-child(n+4) {
      width: 50%;
    }   
  }
</style>

